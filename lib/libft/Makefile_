# ===========================
#          COLORS
# ===========================
RESET	= \033[0m
GREEN	= \033[32m
YELLOW	= \033[33m
BLUE	= \033[34m

OK		= $(GREEN)[OK]$(RESET)
CLEAN	= $(YELLOW)[CLEAN]$(RESET)

# ===========================
#        LIBFT CONFIG
# ===========================
NAME		= libft.a
CC			= cc
CFLAGS		= -Wall -Wextra -Werror -MMD -MP

SRC_DIR		= srcs
INC_DIR		= .
OBJ_DIR		= obj

SRCS		= $(wildcard $(SRC_DIR)/*.c)
OBJS		= $(SRCS:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)
DEPS		= $(OBJS:.o=.d)

AR			= ar rcs

# ===========================
#     PROGRESS BAR CONFIG
# ===========================
TOTAL_SRCS	= $(words $(SRCS))
COUNTER_FILE = .counter

define progress_bar
	@count=$$(cat $(COUNTER_FILE)); \
	perc=$$((100 * $$count / $(TOTAL_SRCS))); \
	bars=$$((perc / 5)); \
	bar=$$(printf "%0.s#" $$(seq 1 $$bars)); \
	printf "\rCompiling: [%-20s] %3s%%" "$$bar" "$$perc";
endef

# ===========================
#          TARGETS
# ===========================
all: $(NAME)

$(NAME): reset_counter $(OBJ_DIR) $(OBJS)
	@$(AR) $(NAME) $(OBJS)
	@printf "\r$(OK) $(NAME) built.$(RESET)\n"
# ---------- CREATE OBJ DIR ----------

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

# ---------- OBJ BUILD ----------
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -I $(INC_DIR) -c $< -o $@ >/dev/null 2>&1
	@echo $$(( $$(cat $(COUNTER_FILE)) + 1 )) > $(COUNTER_FILE)
	$(call progress_bar)


# ---------- COUNTER MGMT ----------
reset_counter:
	@echo 0 > $(COUNTER_FILE)

# ---------- CLEAN ----------
clean:
	@rm -rf $(OBJ_DIR) $(COUNTER_FILE)
	@echo "$(CLEAN) objects removed.$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(CLEAN) $(NAME) removed.$(RESET)"

re: fclean all

-include $(DEPS)

.PHONY: all clean fclean re reset_counter
